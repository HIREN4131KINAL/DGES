<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/padding_cardview"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:id="@+id/card_profile"
                android:layout_width="@dimen/width_cardview"
                android:layout_height="@dimen/hight_cardview"
                android:layout_margin="@dimen/margin_cardview"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="8dp"
                android:onClick="cardProfile"
                android:stateListAnimator="@drawable/translation_selector">

                <ImageView
                    android:layout_width="@dimen/img_width_cardview_dash"
                    android:layout_height="@dimen/img_hight_cardview_dash"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher_round" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_result"
                android:layout_width="@dimen/width_cardview"
                android:layout_height="@dimen/hight_cardview"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_cardview"
                android:layout_weight="1"
                android:background="@android:drawable/picture_frame"
                android:clickable="true"
                android:elevation="8dp"
                android:onClick="cardResult"
                android:stateListAnimator="@drawable/translation_selector">

                <ImageView
                    android:layout_width="@dimen/img_width_cardview_dash"
                    android:layout_height="@dimen/img_hight_cardview_dash"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher_round" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:id="@+id/card_fees"
                android:layout_width="@dimen/width_cardview"
                android:layout_height="@dimen/hight_cardview"
                android:layout_margin="@dimen/margin_cardview"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@android:drawable/picture_frame"
                android:clickable="true"
                android:elevation="8dp"
                android:onClick="cardFees"
                android:stateListAnimator="@drawable/translation_selector">

                <ImageView
                    android:layout_width="@dimen/img_width_cardview_dash"
                    android:layout_height="@dimen/img_hight_cardview_dash"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher_round" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_homework"
                android:layout_width="@dimen/width_cardview"
                android:layout_height="@dimen/hight_cardview"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_cardview"
                android:layout_weight="1"
                android:background="@android:drawable/picture_frame"
                android:clickable="true"
                android:elevation="8dp"
                android:onClick="cardHomework"
                android:stateListAnimator="@drawable/translation_selector">

                <ImageView
                    android:layout_width="@dimen/img_width_cardview_dash"
                    android:layout_height="@dimen/img_hight_cardview_dash"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher_round" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:id="@+id/card_circular"
                android:layout_width="@dimen/width_cardview"
                android:layout_height="@dimen/hight_cardview"
                android:layout_margin="@dimen/margin_cardview"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@android:drawable/picture_frame"
                android:clickable="true"
                android:elevation="8dp"
                android:onClick="cardCircular"
                android:stateListAnimator="@drawable/translation_selector">

                <ImageView
                    android:layout_width="@dimen/img_width_cardview_dash"
                    android:layout_height="@dimen/img_hight_cardview_dash"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher_round" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_updates"
                android:layout_width="@dimen/width_cardview"
                android:layout_height="@dimen/hight_cardview"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_cardview"
                android:layout_weight="1"
                android:background="@android:drawable/picture_frame"
                android:clickable="true"
                android:elevation="8dp"
                android:onClick="cardUpdates"
                android:stateListAnimator="@drawable/translation_selector">

                <ImageView
                    android:layout_width="@dimen/img_width_cardview_dash"
                    android:layout_height="@dimen/img_hight_cardview_dash"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher_round" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:id="@+id/card_observation"
                android:layout_width="@dimen/width_cardview"
                android:layout_height="@dimen/hight_cardview"
                android:layout_margin="@dimen/margin_cardview"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@android:drawable/picture_frame"
                android:clickable="true"
                android:elevation="8dp"
                android:onClick="cardObservation"
                android:stateListAnimator="@drawable/translation_selector">

                <ImageView
                    android:layout_width="@dimen/img_width_cardview_dash"
                    android:layout_height="@dimen/img_hight_cardview_dash"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher_round" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_policies"
                android:layout_width="@dimen/width_cardview"
                android:layout_height="@dimen/hight_cardview"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_cardview"
                android:layout_weight="1"
                android:background="@android:drawable/picture_frame"
                android:clickable="true"
                android:elevation="8dp"
                android:onClick="cardPolicies"
                android:stateListAnimator="@drawable/translation_selector">

                <ImageView
                    android:layout_width="@dimen/img_width_cardview_dash"
                    android:layout_height="@dimen/img_hight_cardview_dash"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher_round" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>